{
  "name": "scan-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "scan-mcp: MCP server for scanner capture (ADF/duplex/page-size), batching, and multipage assembly",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "execa": "^9.6.0",
    "pino": "^9.8.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.33.0",
    "typescript-eslint": "^8.39.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT"
}
